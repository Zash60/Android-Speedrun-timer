<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ... (permissões) ... -->

    <application 
        android:allowBackup="true" 
        android:icon="@mipmap/ic_launcher" 
        android:label="@string/app_name" 
        android:supportsRtl="true" 
        android:theme="@style/Theme.App"
        android:enableOnBackInvokedCallback="true"> <!-- Adicionado para o aviso -->

        <activity android:name=".ui.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.CategoryActivity" android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.SplitsActivity" android:parentActivityName=".ui.CategoryActivity" />
        <activity android:name=".ui.RunHistoryActivity" android:parentActivityName=".ui.CategoryActivity" />
        <activity android:name=".ui.SettingsActivity" android:label="Settings" android:parentActivityName=".ui.MainActivity"/>
        
        <!-- CORREÇÃO: Adicionar a declaração da nova Activity aqui -->
        <activity android:name=".ui.AutoSplitConfigActivity" android:parentActivityName=".ui.CategoryActivity"/>
        
        <activity android:name=".ui.DialogActivity" android:theme="@style/Theme.App.Dialog.Transparent" android:taskAffinity="" android:excludeFromRecents="true" />

        <!-- ... (declarações de serviço) ... -->
        <service android:name=".service.TimerService" android:foregroundServiceType="specialUse">
            <property android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE" android:value="This app uses a foreground service to display a persistent timer overlay for speedrunning." />
        </service>
        <service android:name=".service.CaptureOverlayService" android:enabled="true" android:exported="false"/>

    </application>
</manifest>
